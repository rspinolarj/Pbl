@model IEnumerable<Pbl.Models.ProblemaXMed>

@{
    ViewBag.Title = "SelecionarProblema";
}

<h2>SelecionarProblema</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Med.descMed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Problema.tituloProblema)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Med.descMed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Problema.tituloProblema)
        </td>
        <td>
            @Html.ActionLink("Selecionar", "MontarFichaAvaliativa", "GerenciarProblemasMinistados", new { idProblemaXMed = item.idProblemaxMed, idGrupo = ((Pbl.Models.Grupo) ViewData["Grupo"]).idGrupo }, new { @class = "alter" })
        </td>
    </tr>
}

</table>
