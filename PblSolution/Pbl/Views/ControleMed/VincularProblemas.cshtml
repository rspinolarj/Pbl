@model Pbl.Models.ViewModel.VincularProblemaViewModel
@{
    ViewBag.Title = "VincularProblemas";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleMed")" title="Vá para Controle Med" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Med</a></div>
</div>
<h2>Vínculo de Problemas</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">                        
                            <table class="table table-striped table-hover" id="myTable">
                                <thead>
                                    <tr>
                                        <th>Título</th>
                                        <th>Descrição</th>
                                        <th>Opções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var problema in Model.ListProblemaDisponiveis)
                                    {
                                        <tr class="gradeX">
                                            <td>@Html.DisplayFor(modelItem => problema.tituloProblema)</td>
                                            <td>@Html.DisplayFor(modelItem => problema.descProblema)</td>                                            
                                            <td><img class="actimg" src="~/Content/img/vinc.png" />@Ajax.ActionLink("VincularAjax", "AdicionarProblema", "ControleMed", new { idMed = Model.MedAtual.idMed, idProblema = problema.idProblema }, new AjaxOptions { HttpMethod = "POST" }, new {@class= "alter" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
