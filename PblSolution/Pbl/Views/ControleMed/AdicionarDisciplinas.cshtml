@model Pbl.Models.ViewModel.AdicionarDisciplinasViewModel

@{
    ViewBag.Title = "AdicionarDisciplinas";
}


<h3>
    Adicionar Disciplinas
    <small> Pagina para adicionar disciplinas</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <h2>Cadastradas</h2>
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Disciplina
                                    </th>
                                    <th>
                                        Ativa
                                    </th>
                                    <th>
                                        Tipo Disciplina
                                    </th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.disciplinasCadastradas)
                                {
                                    <tr class="gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descDisciplina)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ativo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoDisciplina.descTipoDisciplina)
                                        </td>
                                        <td>
                                            @*<button type="button" class="btn btn-sm btn-default" onclick="window.location = '@Url.Action("GerenciarMed","ControleMed", new { id = item.idMed })'">
        <em class="fa fa-cog"></em>
    </button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <h2>Disponiveis</h2>
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Disciplina
                                    </th>
                                    <th>
                                        Ativa
                                    </th>
                                    <th>
                                        Tipo Disciplina
                                    </th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.disciplinasCadastradas)
                                {
                                    <tr class="gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descDisciplina)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ativo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoDisciplina.descTipoDisciplina)
                                        </td>
                                        <td>
                                           <!-- <button type="button" class="btn btn-sm btn-default" onclick="window.location = '@*@Url.Action("GerenciarMed","ControleMed", new { id = item.idMed })'*@">
                                                <em class="fa fa-cog"></em>
                                            </button>-->
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}



