@model IEnumerable<Pbl.Models.Grupo>

@{
    ViewBag.Title = "GerenciarGrupos";
}

<h3>
    Gerenciar Grupos
    <small> Página de Controle de Grupos da "MED....................................."</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href="@Url.Action("AdicionarGrupos", "ControleMed", new { idMed = ViewBag.idMed })">
                        <i class="fa fa-plus"></i>
                        Adicionar Grupo
                    </a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="all">Código</th>
                                    <th class="all">Grupo</th>
                                    <th class="all">Quantidade de Alunos</th>
                                    <th class="all">MED</th>
                                    <th class="all">Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var grupo in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@grupo.idGrupo</td>
                                        <td>@grupo.descGrupo</td>
                                        <td>@grupo.InscricaoTurma.Count</td>
                                        <td>@grupo.Med.descMed - @grupo.Med.Semestre.descSemestre</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-default" onclick="window.location = '@Url.Action("Update","ControleAlunos", new { id = grupo.idGrupo })'">
                                                <em class="fa fa-pencil"></em>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="window.location = '@Url.Action("Delete","ControleAlunos", new { id = grupo.idGrupo })'">
                                                <em class="fa fa-times"></em>
                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="hidden-print" />
<div class="clearfix">
    <button type="button" class="btn btn-labeled btn-default" onclick="history.back();">
        <span class="btn-label">
            <i class="fa fa-arrow-left"></i>
        </span>Voltar
    </button>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}


