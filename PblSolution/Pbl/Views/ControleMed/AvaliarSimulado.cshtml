@model IEnumerable<Pbl.Models.ControleNotasXProva>

@{
    ViewBag.Title = "AvaliarSimulado";
}

<h2>AvaliarSimulado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ControleNotasXProva</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-xs-3 col-xs-offset-3">
                    <div class="input-group number-spinner">
                        <input type="hidden" name="idControleNotas[]" value="@item.ControleNotas.idControleNotas" />
                        <span class="input-group-btn data-dwn">
                            <button class="btn btn-default btn-info" data-dir="dwn"><span class="glyphicon glyphicon-minus"></span></button>
                        </span>
                        <input type="text" name="numAcertos[]" class="form-control text-center" value="1" min="-10" max="@item.Prova.numeroQuestoes">
                        <span class="input-group-btn data-up">
                            <button class="btn btn-default btn-info" data-dir="up"><span class="glyphicon glyphicon-plus"></span></button>
                        </span>
                    </div>
                </div>
            </div>
        }
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
