@model IEnumerable<Pbl.Models.Prova>

@{
    ViewBag.Title = "GerenciarSimulados";
}

<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<h3>
    Controle de Simulados
    <small> Página de Controle dos Simulados da @ViewBag.descMedSemestre</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href="@Url.Action("AdicionarSimulado", "ControleMed", new {idMed = Model.FirstOrDefault().idMed })">
                        <i class="fa fa-plus"></i>
                        Adicionar Simulado
                    </a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Módulo</th>
                                    <th>Tipo de Simulado</th>
                                    <th>Med</th>
                                    <th>Número de Questões</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@item.Modulo.descModulo</td>
                                        <td>@item.TipoProva.descTipoProva</td>
                                        <td>@item.Med.descMed</td>
                                        <td>@item.numeroQuestoes</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-info" title="Avaliar Alunos" onclick="window.location = '@Url.Action("AvaliarSimulado","ControleMed", new { idProva = item.idProva })'">
                                                <em class="fa fa-bar-chart"></em>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="hidden-print" />
<div class="clearfix">
    <button type="button" class="btn btn-labeled btn-default" onclick="window.location = '@Url.Action("GerenciarMed","ControleMed", new { id = Model.FirstOrDefault().idMed })'">
        <span class="btn-label">
            <i class="fa fa-arrow-left"></i>
        </span>Voltar
    </button>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}
