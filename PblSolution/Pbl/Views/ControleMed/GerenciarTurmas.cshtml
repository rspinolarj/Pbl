@model IEnumerable<Pbl.Models.Turma>

@{
    ViewBag.Title = "GerenciarTurmas";
}

<h3>
    Gerenciar Turmas
    <small> Página de Controle de turmas da @Model.FirstOrDefault().Med.descMed - @Model.FirstOrDefault().Med.Semestre.descSemestre</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href="@Url.Action("AdicionarTurma", "ControleMed", new { idMed = ViewBag.idMed })">
                        <i class="fa fa-plus"></i>
                        Adicionar Turma
                    </a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="all">Código</th>
                                    <th class="all">Turma</th>
                                    <th class="all">MED</th>
                                    <th class="all">Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var turma in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@turma.idTurma</td>
                                        <td>@turma.descTurma</td>
                                        <td>@turma.Med.descMed - @turma.Med.Semestre.descSemestre</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-default" onclick="window.location = '@Url.Action("AdicionarAlunosTurma","ControleMed", new { idTurma = turma.idTurma})'">
                                                <em class="fa fa-user-plus"></em>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="window.location = '@Url.Action("Delete","ControleAlunos", new { idTurma = turma.idTurma })'">
                                                <em class="fa fa-times"></em>
                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="hidden-print" />
<div class="clearfix">
    <button type="button" class="btn btn-labeled btn-default" onclick="history.back();">
        <span class="btn-label">
            <i class="fa fa-arrow-left"></i>
        </span>Voltar
    </button>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}
