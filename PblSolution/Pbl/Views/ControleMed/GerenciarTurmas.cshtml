@model IEnumerable<Pbl.Models.Turma>

@{
    ViewBag.Title = "GerenciarTurmas";
}

<h2>GerenciarTurmas</h2>

<p>
    @Html.ActionLink("Adicionar Turma", "AdicionarTurma", "ControleMed", new { idMed = ViewBag.idMed }, new { @type = "button", @class = "btn btn-labeled btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descTurma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Med.descMed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descTurma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Med.descMed)
            </td>
            <td>
                @Html.ActionLink("Adicionar Alunos", "AdicionarAlunosTurma", new { idTurma = item.idTurma }) |
                @Html.ActionLink("Deletar Turma", "RemoverTurma", new { id = item.idTurma })
            </td>
        </tr>
    }

</table>
