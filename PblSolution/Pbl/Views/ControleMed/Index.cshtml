@model IEnumerable<Pbl.Models.Med>
@{
    ViewBag.Title = "Index";
}
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleMed")" title="Vá para Controle Med" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Med</a></div>
</div>
<h2>Controle de MED</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>MED</th>
                                    <th>Semestre</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>MED @Html.DisplayFor(c => item.descMed)</td>
                                        <td>@Html.DisplayFor(c => item.Semestre.descSemestre)</td>
                                        <td>
                                            <i class="fa fa-cog "></i> @Html.ActionLink("Gerenciar", "GerenciarMed", new { id = item.idMed}, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
