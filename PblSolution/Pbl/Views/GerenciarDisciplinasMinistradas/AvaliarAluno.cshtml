@model Pbl.Models.ControleNotasXAula

@{
    ViewBag.Title = "AvaliarAluno";
}

<h2>AvaliarAluno</h2>
<h2>Med: @(((Pbl.Models.Aula)ViewData["Aula"]).Turma.Med.descMed)</h2>
<h2>Módulo: @(((Pbl.Models.Modulo)ViewData["Modulo"]).descModulo) </h2>
<h2>Disciplina: @(((Pbl.Models.Aula)ViewData["Aula"]).Disciplina.descDisciplina) </h2>
<h2>Turma: @(((Pbl.Models.Aula) ViewData["Aula"]).Turma.descTurma) </h2>
<h2>Aluno: @(((Pbl.Models.Aluno)ViewData["Aluno"]).nomeAluno) </h2>

@using (Html.BeginForm("AvaliarAlunoAction", "GerenciarDisciplinasMinistradas"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ControleNotasXAula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idControleNotas)
        @Html.HiddenFor(model => model.idAula)
        <div class="form-group">
            @Html.LabelFor(model => model.nota, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
