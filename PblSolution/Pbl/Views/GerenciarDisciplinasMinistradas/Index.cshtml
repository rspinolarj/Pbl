@model IEnumerable<Pbl.Models.Aula>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turma.descTurma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disciplina.descDisciplina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Professor.nomeProfessor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turma.Med.descMed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Turma.descTurma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disciplina.descDisciplina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.nomeProfessor)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Turma.Med.descMed)
        </td>
        <td>
            <a></a>
            @Html.ActionLink("Avaliar","SelecionarModulo", "GerenciarDisciplinasMinistradas", new { idAula = item.idAula }, new { @class = "alter"})
        </td>
    </tr>
}

</table>
