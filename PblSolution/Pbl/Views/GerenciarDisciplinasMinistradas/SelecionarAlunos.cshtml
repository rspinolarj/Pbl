@model IEnumerable<Pbl.Models.ViewModel.SelecionarAlunosViewModel>

@{
    ViewBag.Title = "SelecionarAlunos";
}

<h2>SelecionarAlunos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.inscricao.ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inscricao.Aluno.nomeAluno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inscricao.Turma.descTurma)
        </th>
        <th>Nota</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.inscricao.ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inscricao.Aluno.nomeAluno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inscricao.Turma.descTurma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nota)
        </td>
        <td>
            @Html.ActionLink("Avaliar", "AvaliarAluno", "GerenciarDisciplinasMinistradas", new { idInscricaoTurma = item.inscricao.idInscricaoTurma, idModulo = ((Pbl.Models.Modulo)ViewData["Modulo"]).idModulo, idAula = ((Pbl.Models.Aula)ViewData["Aula"]).idAula }, new { @class = "alter" })
        </td>
    </tr>
}

</table>
