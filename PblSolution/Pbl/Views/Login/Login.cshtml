@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">Insira suas credenciais.</p>
          <form action="" method="post" class="form-styles">
              <div class="form-group has-feedback">
                  <input id="exampleInputEmail1" name="login" placeholder="Usuário" autocomplete="off" required="required" class="form-control" />
                  <span class="fa fa-envelope form-control-feedback text-muted"></span>
              </div>
              <div class="form-group has-feedback">
                  <input id="exampleInputPassword1" name="senha" type="password" placeholder="Senha" required="required" class="form-control" />
                  <span class="fa fa-lock form-control-feedback text-muted"></span>
              </div>
              <div class="clearfix">
                  <div class="pull-right">
                      <a href="@Url.Action("Recover", "Login")" class="text-muted">Esqueceu a senha?</a>
                  </div>
              </div>
              <button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>
          </form>
      </div>
   </div>
   <!-- END panel-->
</div>