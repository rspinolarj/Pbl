@model Pbl.Models.ViewModel.PerfilViewModel
<div class="container-md">
   <div class="row">
      <div class="col-md-3">
         <div class="panel b">
            <div class="panel-heading bg-gray-lighter text-bold">Personal Settings</div>
            <div class="list-group">
                <a href="#tabSetting1" data-toggle="tab" class="list-group-item">Perfil</a>
                <a href="#tabSetting2" data-toggle="tab" class="list-group-item">Senha</a>
            </div>
         </div>
      </div>
      <div class="col-md-9">
         <div class="tab-content p0 b0">
            <div id="tabSetting1" class="tab-pane active">
               <div class="panel b">
                  <div class="panel-heading bg-gray-lighter text-bold">Perfil</div>
                  <div class="panel-body">
                     <form action="@Url.Action("AtualizarInformacoes","Login")">
                        <div class="form-group">
                           <label>Foto</label>
                           <input type="file" name="foto" data-input="false" data-classbutton="btn btn-default" data-classinput="form-control inline" data-buttontext="Nova Foto" data-iconname="fa fa-upload mr" class="form-control filestyle"
                           />
                        </div>
                        <div class="form-group">
                           <label>Nome</label>
                           <input type="text" name="nome" readonly value="@Model.nome" class="form-control" />
                        </div>
                        <div class="form-group">
                           <label>Email</label>
                           <input type="email" required name="email" value="@Model.email" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-info">Salvar</button>
                     </form>
                  </div>
               </div>
            </div>
            <div id="tabSetting2" class="tab-pane">
               <div class="panel b">
                  <div class="panel-heading bg-gray-lighter text-bold">Senha</div>
                  <div class="panel-body">
                     <form action="@Url.Action("AlterarSenha","Login")" data-parsley-validate="" novalidate="">
                        <div class="form-group">
                           <label>Nova Senha</label>
                           <input type="password" name="senha" required id="senha" class="form-control" />
                        </div>
                        <div class="form-group">
                           <label>Confirme a nova senha</label>
                           <input type="password" name="confirmaSenha" required class="form-control" data-parsley-equalto="#senha" />
                        </div>
                        <button type="submit" class="btn btn-info">Salvar</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/filestyle")
    @Scripts.Render("~/bundles/parsley")
}
