@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">RECUPERAR SENHA</p>
         <form role="form">
            <p class="text-center">Informe seu CPF para receber as instruções por email.</p>
            <div class="form-group has-feedback">
               <label for="resetInputCpf1" class="text-muted">CPF</label>
               <input id="resetInputCpf1" type="text" placeholder="Enter CPF" class="form-control" />
               <span class="fa fa-envelope form-control-feedback text-muted"></span>
            </div>
            <button type="submit" class="btn btn-danger btn-block">Reset</button>
         </form>
      </div>
   </div>
   <!-- END panel-->
</div>