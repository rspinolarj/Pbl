@model Pbl.Models.Aluno
@{
    ViewBag.Title = "Update";
}

<h3>
    Aluno
    <small>Formulário para Atualização dos Alunos</small>
</h3>
<form action="" method="post" onsubmit="return validaForm();">
    <div class="panel panel-default">
        <div class="panel-heading">Update</div>
        <div class="panel-body">
            <input name="idAluno" type="hidden" value="@Model.idAluno" />
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input name="nomeAluno" placeholder="Nome " value="@Model.nomeAluno" class="form-control" type="text">
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">CPF</label>
                    <div class="col-sm-10">
                        <input name="cpfAluno" id="cpf" placeholder="CPF " pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" onblur="msgErroCpf();" value="@Model.cpfAluno" class="form-control" type="text">
                        <span id="msgCpf" class="text-danger small"></span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Matrícula</label>
                    <div class="col-sm-10">
                        <input name="matriculaAluno" placeholder="Nome " value="@Model.matriculaAluno" class="form-control" type="text">
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <!-- END panel-->
    <hr class="hidden-print" />
    <div class="clearfix">
        <button type="button" class="btn btn-labeled btn-default" onclick="history.back();">
            <span class="btn-label">
                <i class="fa fa-arrow-left"></i>
            </span>Voltar
        </button>
        <button type="submit" id="btnSubmit" class="btn btn-labeled btn-success pull-right">
            <span class="btn-label">
                <i class="fa fa-check"></i>
            </span>Editar
        </button>
    </div>
</form>

@section scripts{
    @Scripts.Render("~/bundles/jqueryMask")
    @Scripts.Render("~/bundles/site")
    <script>
        jQuery(function ($) {
            $("#cpf").mask("999.999.999-99");
        });
        function validaForm() {
            if (!validarCPF('cpf')) {
                document.getElementById('cpf').focus();
                return false;
            }
        }

        function msgErroCpf() {
            if (!validarCPF('cpf')) {
                document.getElementById('msgCpf').innerText = "CPF inválido";
                return false;
            } else {
                document.getElementById('msgCpf').innerText = "";
            }
        }

    </script>    
}

