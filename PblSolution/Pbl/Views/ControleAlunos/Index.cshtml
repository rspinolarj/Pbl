<h3>
   Controle de Alunos
    <small> Pagina de Controle de Aluno</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href='<%: @Url.Action("Adicionar", "Create", null) %>'><i class="fa fa-plus"></i>
 Adicionar Alunos</a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Matricula</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var aluno in Model)
                            {
                                <tr class="gradeX">
                                    <td>@Html.DisplayFor(c => aluno.nomeAluno)</td>
                                    <td>@Html.DisplayFor(c => aluno.cpfAluno)</td>
                                    <td>@Html.DisplayFor(c => aluno.matriculaAluno)</td>
                                    <td>
                                        <i class="fa fa-pencil "></i> @Html.ActionLink("Alterar", "Update", new { id = aluno.idAluno }, new { @class = "alter" })
                                        <i class="fa fa-times"></i>  @Html.ActionLink("Deletar", "Delete", new { id = aluno.idAluno }, new { @class = "alter" })
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}



