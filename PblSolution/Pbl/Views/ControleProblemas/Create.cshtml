@model Pbl.Models.Problema
@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>

<h3>
    Cadastro de Problemas
    <small> Formulario para Cadastro de Problemas</small>
</h3>
<form action="" method="post" class="form-horizontal">
    <div class="panel panel-default">
        <div class="panel-heading">Cadastro</div>
        <div class="panel-body">

            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Titulo</label>
                    <div class="col-sm-10">
                        <input name="tituloProblema" placeholder="Titulo" class="form-control" type="text">
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Descrição</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="descProblema" placeholder="Descrição"></textarea>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>
    <!-- END panel-->
    <hr class="hidden-print" />
    <div class="clearfix">
        <button type="button" class="btn btn-labeled btn-default" onclick="history.back();">
            <span class="btn-label">
                <i class="fa fa-arrow-left"></i>
            </span>Voltar
        </button>
        <button type="submit" id="btnSubmit" class="btn btn-labeled btn-success pull-right">
            <span class="btn-label">
                <i class="fa fa-check"></i>
            </span>Cadastrar
        </button>
    </div>
</form>

