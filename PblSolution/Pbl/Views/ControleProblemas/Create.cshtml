@model Pbl.Models.Problema
@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleProblemas")" title="Vá para Controle Problemas" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Problemas</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Cadastro de Problemas</h1>
@using (Html.BeginForm("Create", "ControleProblemas"))
{
    @Html.ValidationSummary(true, "Algo deu errado")
    <ul>
        <li>
            <div class="form-group">
                <label class="col-md-4 control-label">Titulo</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="tituloProblema" placeholder="Titulo" class="form-control" type="text">
                    </div>
                </div>
            </div>
        </li>
        <li>
            <div class="form-group">
                <label class="col-md-4 control-label">Descrição</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                        <textarea class="form-control" name="descProblema" placeholder="Descrição"></textarea>
                    </div>
                </div>
            </div>
        </li>
        @Html.AntiForgeryToken()
        <li>
            <div class="form-group groupbutton">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" value="Salvar" class="btn btn-warning">Cadastrar <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>

        </li>
    </ul>
