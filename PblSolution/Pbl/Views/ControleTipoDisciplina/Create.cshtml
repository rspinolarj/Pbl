@model Pbl.Models.TipoDisciplina
@{
    ViewBag.Title = "Novo tipo de disciplina";
}

<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleTipoDisciplina")" title="Vá para Controle Tipo Disciplinas" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Tipo disciplina</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Cadastro de Tipos de Disciplina</h1>
                    @using (Html.BeginForm("Create", "ControleTipoDisciplina"))
                    {
                        @Html.ValidationSummary(true, "Algo não está certo");
                        <ul>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Descrição</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            <textarea class="form-control" name="descTipoDisciplina" placeholder="Descrição"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <div class="form-group groupbutton">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-4">
                                        <button type="submit" value="Salvar" class="btn btn-warning">Cadastrar <span class="glyphicon glyphicon-send"></span></button>
                                    </div>
                                </div>

                            </li>
                        </ul>
