@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aluno.nomeAluno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turma.descTurma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turma.Med.descMed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.nomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turma.descTurma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turma.Med.descMed)
            </td>
