@model IEnumerable<Pbl.Models.AvaliacaoTutoria>

@{
    ViewBag.Title = "AvaliacoesEmAberto";
}

<h3>
    Avaliações em Aberto
    <small> Selecione um problema para avaliar</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Problema</th>
                                    <th>Inicio Avaliação</th>
                                    <th>Fim Avaliação</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@item.ProblemaXMed.Problema.tituloProblema</td>
                                        <td>@item.dtInicio.ToShortDateString()</td>
                                        <td>@item.dtFim.ToShortDateString()</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-default" onclick="window.location = '@Url.Action("AvaliacoesInterpares","AcompanhamentoMeds", new { idProblemaXMed = item.idProblemaxMed, idGrupo = item.idGrupo})'">
                                                <em class="fa fa-cog"></em>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}

