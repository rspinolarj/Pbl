<!-- START row-->
<div class="row">
    <div class="col-lg-6">
        <!-- START panel-->
        <div class="panel panel-default">
            <div class="panel-heading">Problema "numero do problema"</div>
            <div class="panel-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th colspan="6">1. Habilidades para discutir o problema</th>
                            </tr>
                            <tr>
                                <th colspan="2">1.1 Identifica problemas e gera hipóteses?</th>
                                <th colspan="2">1.2 Utiliza conhecimentos prévios? </th>
                                <th colspan="2">1.3 Participa ativamente do grupo?</th>
                            </tr>
                            <tr>
                                <th>Sim</th>
