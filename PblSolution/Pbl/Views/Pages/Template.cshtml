@{
    ViewBag.Title = "Blank Template";
}
<h3>Page title
   <small>Subtitle</small>
</h3>
<!-- START row-->
<div class="row">
    <div class="col-lg-6">
        <!-- START panel-->
        <div class="panel panel-default">
            <div class="panel-heading">Problema "numero do problema"</div>
            <div class="panel-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th colspan="3">1. Habilidades para discutir o problema</th>
                            </tr>
                            <tr>
                                <th>1.1 Identifica problemas e gera hipóteses?</th>
                                <th>1.2 Utiliza conhecimentos prévios? </th>
                                <th>1.3 Participa ativamente do grupo?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td align="center">
                                    <div class="input-group">
                                        <div class="btn-group radioBtn">
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="hipotese" data-title="Y">SIM</a>
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="hipotese" data-title="N">NÃO</a>
                                        </div>
                                        <input type="hidden" name="hipotese" id="hipotese">
                                    </div>
                                </td>
                               
                                <td align="center">
                                    <div class="input-group">
                                        <div class="btn-group radioBtn">
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="conhecimentoPrevio" data-title="Y">SIM</a>
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="conhecimentoPrevio" data-title="N">NÃO</a>
                                        </div>
                                        <input type="hidden" name="conhecimentoPrevio" id="conhecimentoPrevio">
                                    </div>
                                </td>
                                <td align="center">
                                    <div class="input-group">
                                        <div class="btn-group radioBtn">
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="ativonoGrupo" data-title="Y">SIM</a>
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="ativonoGrupo" data-title="N">NÃO</a>
                                        </div>
                                        <input type="hidden" name="ativonoGrupo" id="ativonoGrupo">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
        <!-- END panel-->
    </div>
</div>

@section Styles {
    <style>
        .radioBtn .notActive {
            color: #3276b1;
            background-color: #fff;
        }
    </style>
}
@section Scripts {
    <script>
        $('.radioBtn a').on('click', function () {
            var sel = $(this).data('title');
            var tog = $(this).data('toggle');
            $('#' + tog).prop('value', sel);

            $('a[data-toggle="' + tog + '"]').not('[data-title="' + sel + '"]').removeClass('active').addClass('notActive');
            $('a[data-toggle="' + tog + '"][data-title="' + sel + '"]').removeClass('notActive').addClass('active');
        })
    </script>
}
