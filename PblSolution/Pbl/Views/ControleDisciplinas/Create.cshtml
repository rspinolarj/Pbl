@model Pbl.Models.ViewModel.DisciplinaViewModel
@{
    ViewBag.Title = "Nova Disciplina";
}

<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleDisciplinas")" title="Vá para Controle Disciplinas" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Disciplinas</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Nova Disciplina</h1>
                   @using (Html.BeginForm("Create", "ControleDisciplinas"))
                   {
                        @Html.ValidationSummary(true, "Algo não está certo");
                        <ul>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Descrição</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            <textarea class="form-control" name="disciplina.descDisciplina" placeholder="Descrição"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            @*<li>
        @Html.TextBoxFor(c => c.disciplina.descDisciplina,new { placeholder="Descrição" })
        <span>Informe a descrição</span>
    </li>*@
                            <li>
                                <div class="form-group formselect">
                                    <label class="col-md-4 control-label tiposelect">Tipo Disciplina</label>
                                    <div class="col-md-4 selectContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                            @Html.DropDownListFor(c => c.disciplina.idTipoDisciplina, new SelectList(Model.listaTipoDisciplina, "idTipoDisciplina", "descTipoDisciplina"), "", new { @class = "form-control selectpicker" })
                                        </div>
                                    </div>
                                </div>
                               @* @Html.DropDownListFor(c => c.disciplina.idTipoDisciplina, new SelectList(Model.listaTipoDisciplina, "idTipoDisciplina", "descTipoDisciplina"), "", new { @class = "form-control selectpicker" })*@
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <div class="form-group groupbutton">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-4">
                                        <button type="submit" value="Salvar" class="btn btn-warning">Cadastrar <span class="glyphicon glyphicon-send"></span></button>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

