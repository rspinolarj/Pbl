@model Pbl.Models.ViewModel.DisciplinaViewModel
@{
    ViewBag.Title = "Alterar Disciplina";
}



<h3>
    Atualização de Disciplina
    <small>Pagina para atualização das Diciplinas</small>
</h3>
<div class="panel panel-default">
    <div class="panel-heading">Update</div>
    <div class="panel-body">
        <form action="" method="post" class="form-horizontal">
            <input name="disciplina.idDisciplina" type="hidden" value="@Model.disciplina.idDisciplina" />
                @Html.ValidationSummary(true, "Algo não está certo");
                <fieldset>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Disciplina</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="disciplina.descDisciplina" placeholder="Disciplina">@Model.disciplina.descDisciplina</textarea>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tipo Disciplina</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(c => c.disciplina.idTipoDisciplina, new SelectList(Model.listaTipoDisciplina, "idTipoDisciplina", "descTipoDisciplina"), "", new { @class = "form-control selectpicker" })
                            @Html.ValidationMessageFor(c => c.disciplina.idTipoDisciplina)
                        </div>
                    </div>
                </fieldset>
            <!-- Success button with label -->
                <button type="submit" value="salvar" class="btn btn-labeled btn-success">
                    <span class="btn-label">
                        <i class="fa fa-check"></i>
                    </span>Cadastrar
                </button>
        </form>
    </div>
</div>
<!-- END panel-->

