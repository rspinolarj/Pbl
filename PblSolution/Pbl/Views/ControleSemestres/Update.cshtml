@model Pbl.Models.ViewModel.SemestreViewModel
@{
    ViewBag.Title = "Update";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleSemestres")" title="Vá para Controle Semestres" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Semestres</a></div>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Alterar Semestre</h1>
                    @using (Html.BeginForm("Update", "ControleSemestres"))
                    {
                           @Html.ValidationSummary(true, "Algo não está certo")
                           @Html.TextBoxFor(c => c.idSemestre, new { @value = Model.idSemestre, @type = "hidden" })
                        <ul>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataInicioModulo1">Data inicio modulo 1</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataInicioModulo1, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataInicioModulo1)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataFinalModulo1">Data Final modulo 1</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo1, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo1)
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="dataInicioModulo2">Data inicio modulo 2</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo2, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo2)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataFinalModulo2">Data Final modulo 2</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo2, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo2)
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="dataInicioModulo3">Data inicio modulo 3</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo3, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo3)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataFinalModulo3">Data Final modulo 3</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo3, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo3)
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Descrição</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(c => c.Descricao)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-4">
                                        <button type="submit" value="Salvar" class="btn btn-warning">Salvar <span class="glyphicon glyphicon-send"></span></button>
                                    </div>
                                </div>

                            </li>
                        </ul>
                    }
                </form>

            </div>
        </div>
    </div>
</div>
