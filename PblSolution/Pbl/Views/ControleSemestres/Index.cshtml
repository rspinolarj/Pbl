@model IEnumerable<Pbl.Models.Semestre>
@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>


<h3>
    Controle de Semestres
    <small> Pagina para Controle dos Semestres</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href="@Url.Action("Create", "ControleSemestres")">
                        <i class="fa fa-plus"></i>
                        Adicionar Semestre
                    </a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Semestre</th>
                                    <th>Ano</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(c => item.descSemestre)</td>
                                        <td>@Html.DisplayFor(c => item.Ano.ano1)</td>
                                        <td>
                                            <i class="fa fa-pencil "></i>  @Html.ActionLink("Alterar", "Update", new { id = item.idSemestre }, new { @class = "alter" })
                                            <i class="fa fa-times "></i>  @Html.ActionLink("Deletar", "Delete", new { id = item.idSemestre }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}

