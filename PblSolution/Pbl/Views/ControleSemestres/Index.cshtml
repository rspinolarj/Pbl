@model IEnumerable<Pbl.Models.Semestre>
@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleSemestres")" title="Vá para Controle Semestres" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Semestres</a></div>
</div>
<h2>Controle de Semestres @Html.ActionLink("Adicionar", "Create", null, new { @class = "classname" })</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">

                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Semestre</th>
                                    <th>Ano</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(c => item.descSemestre)</td>
                                        <td>@Html.DisplayFor(c => item.Ano.ano1)</td>
                                        <td>
                                            <i class="fa fa-pencil "></i>  @Html.ActionLink("Alterar", "Update", new { id = item.idSemestre }, new { @class = "alter" })
                                            <i class="fa fa-times "></i>  @Html.ActionLink("Deletar", "Delete", new { id = item.idSemestre }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




