                                            @Html.TextBoxFor(c => c.DataFinalModulo2, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo2)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataFinalModulo2">Data Final modulo 2</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo2, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo2)
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="dataInicioModulo3">Data inicio modulo 3</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo3, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo3)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="DataFinalModulo3">Data Final modulo 3</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="	glyphicon glyphicon-calendar"></i></span>
                                            @Html.TextBoxFor(c => c.DataFinalModulo3, new { @class = "form-control", @type = "date" })
                                            @Html.ValidationMessageFor(c => c.DataFinalModulo3)
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Descrição</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(c => c.Descricao)
                                        </div>
                                    </div>
                                </div>
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-4">
                                        <button type="submit" value="Salvar" class="btn btn-warning">Cadastrar <span class="glyphicon glyphicon-send"></span></button>
                                    </div>
                                </div>

                            </li>
                        </ul>
