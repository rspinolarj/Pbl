<h3>
    Controle de Professores
    <small> Pagina de Controle de Professores</small>
</h3>


<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <a href="@Url.Action("Create", "ControleProfessores")">
                        <i class="fa fa-plus"></i>
                        Adicionar Professor
                    </a>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var professor in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(c => professor.nomeProfessor)</td>
                                        <td>@Html.DisplayFor(c => professor.cpfProfessor)</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-default" onclick="window.location = '@Url.Action("Update","ControleProfessores", new { id = professor.idProfessor })'">
                                                <em class="fa fa-pencil"></em>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="window.location = '@Url.Action("Delete","ControleProfessores", new { id = professor.idProfessor })'">
                                                <em class="fa fa-times"></em>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}
