@model Pbl.Models.Professor
@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<h3>
    Professor
    <small>Formulário para Cadastro de Professores</small>
</h3>

<div class="panel panel-default">
    <div class="panel-heading">Cadastro</div>
    <div class="panel-body">
        <form action="" method="post" class="form-horizontal">
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" name="nomeProfessor" placeholder="Nome" class="form-control input-sm" />
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">CPF</label>
                    <div class="col-sm-10">
                        <input type="text" name="cpfProfessor" placeholder="CPF" id="cpf" onsubmit="verificarCPF(this);" class="form-control input-sm" />
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Matrícula</label>
                    <div class="col-sm-10">
                        <input type="text" name="matriculaProfessor" placeholder="Matrícula" class="form-control input-sm" />
                    </div>
                </div>
            </fieldset>
            <!-- Success button with label -->
            <button type="submit" class="btn btn-labeled btn-success">
                <span class="btn-label">
                    <i class="fa fa-check"></i>
                </span>Cadastrar
            </button>
        </form>
    </div>
</div>
<!-- END panel-->


@section scripts{
    <script>
        //arquivo funcoes_cpf.js
        // validador CPF
        function verificarCPF(c) {
            var i;
            s = c.value;
            var c = s.substr(0, 9);
            var dv = s.substr(9, 2);
            var d1 = 0;
            var v = false;

            for (i = 0; i < 9; i++) {
                d1 += c.charAt(i) * (10 - i);
            }
            if (d1 == 0) {
                alert("CPF Inválido")
                v = true;
                return false;
            }
            d1 = 11 - (d1 % 11);
            if (d1 > 9) d1 = 0;
            if (dv.charAt(0) != d1) {
                alert("CPF Inválido")
                v = true;
                return false;
            }

            d1 *= 2;
            for (i = 0; i < 9; i++) {
                d1 += c.charAt(i) * (11 - i);
            }
            d1 = 11 - (d1 % 11);
            if (d1 > 9) d1 = 0;
            if (dv.charAt(1) != d1) {
                alert("CPF Inválido")
                v = true;
                return false;
            }
            if (!v) {
                alert(c + "nCPF Válido")
            }
        }


    </script>

}


